.review_form
  = form_for @review do |f|
    = f.label :restaurant  
    = f.select :restaurant_id, Restaurant.pluck(:name, :id) 

    = f.label :judge
    = f.select :judge_id, Judge.pluck(:full_name, :id) 

    = f.label :meat_flavor
    = f.number_field :meat_flavor, in: 0...11 

    = f.label :meat_done
    = f.number_field :meat_done, in: 0...11 

    = f.label :bun
    = f.number_field :bun, in: 0...11 

    = f.label :toppings
    = f.number_field :toppings, in: 0...11 

    = f.label :sides
    = f.number_field :sides, in: 0...11 

    = f.label :presentation
    = f.number_field :presentation, in: 0...11 

    = f.label :service
    = f.number_field :service, in: 0...11 

    = f.label :atmosphere
    = f.number_field :atmosphere, in: 0...11 

    = f.label :comment
    = f.text_field :comment

    = f.submit "Submit review"
